{% extends 'base.html.twig' %}

{% block title %}Edit {{ post.title }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('post_edit') }}
{% endblock %}

{% block body %}

<div class="container">
    <div class="row justify-content-center m-0">
        <div class="col-4 shadow form-container">
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <button class="btn btn-primary" >
                Save
            </button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('post_edit') }}
{% endblock %}

